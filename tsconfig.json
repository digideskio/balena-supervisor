{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"outDir": "./build/src/",
		"lib": [
			"es6"
		],
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts",
		"typings/**/*.d.ts"
	]
}
